% Please edit documentation in R/BetterVis_Boxplot1.R
\name{BetterVis_Boxplot1}
\alias{BetterVis_Boxplot1}
\title{BetterVis Boxplot Function}
\arguments{
\item{data}{A data frame.}

\item{x_var}{A string specifying the x-axis variable.}

\item{y_var}{A string specifying the y-axis variable.}

\item{fill_var}{A string specifying the fill variable.}

\item{use_facet}{Logical. Whether to use facets in the plot.}

\item{title}{Optional. The title of the plot.}

\item{x_label_angle}{Numeric. Angle of x-axis labels (default: 45 degrees).}

\item{x_label_bold}{Logical. Whether to bold the x-axis labels.}

\item{y_label_bold}{Logical. Whether to bold the y-axis labels.}

\item{axis_titles}{Character vector. Titles for x and y axes.}

\item{axis_title_bold}{Logical. Whether to bold axis titles.}

\item{custom_colors}{Optional. Custom colors for the fill variable.}

\item{jitter}{Logical. Whether to add jitter to the points.}

\item{jitter_color}{Optional. Custom colors for jitter points.}

\item{jitter_width}{Numeric. Width of jitter (default: 0.1).}

\item{jitter_alpha}{Numeric. Transparency of jitter points (default: 1).}

\item{jitter_size}{Numeric. Size of jitter points (default: 1).}

\item{legend_show}{Logical. Whether to show the legend (default: TRUE).}

\item{legend_title}{Optional. Title of the legend.}

\item{box_width}{Numeric. Width of the boxplots (default: 0.75).}

\item{comparison_col}{Character. Column used for statistical comparison.}

\item{comparison}{List. Comparisons for statistical testing.}

\item{comparison_method}{Character. Statistical test method ("wilcox" or "t.test").}

\item{box_background}{Logical. Whether to include a background for the boxplot.}

\item{jitter_legend}{Logical. Whether jitter points should appear in the legend.}

\item{fill_legend}{Logical. Whether the fill variable should appear in the legend.}

\item{background_color}{Character. Color of the plot background.}

\item{background_border}{Logical. Whether to include a border around the background.}

\item{sig_type}{Character. Type of significance label ("SYMBOL" or "p.format").}

\item{guides_modifications}{Optional. Custom modifications to guides.}

\item{violin}{Logical. Whether to include a violin layer (default: FALSE).}

\item{...}{Additional arguments passed to ggplot2 layers.}
}
\value{
A ggplot object.
}
\description{
Creates enhanced boxplots with customization options for ggplot2.
}
\examples{
data <- data.frame(x = c("A", "B"), y = c(1, 2), fill = c("F1", "F2"))
BetterVis_Boxplot1(data, "x", "y", "fill")
}
